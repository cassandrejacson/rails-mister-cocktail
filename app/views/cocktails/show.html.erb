<div class="wrapper" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%=image_url("#{@cocktail.id}.jpg")%>);">
<div class="container" >
  <div class="row">
      <h1><%= @cocktail.name.capitalize %></h1>

    <div class="col-xs-8">
      <h2>List of ingredients</h2>
      <ul>
        <% @doses.each do |dose|  %>
           <li>
              <%= dose.description %>
              <%= @ingredient.name %>
              <%= link_to cocktail_dose_path(dose.id), method: :delete, data: { confirm: "Sure?" } do  %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
           </li>
        <% end %>
      </ul>
    </div>

    <div class="col-xs-4">
      <h2>Add an ingredient!</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit, 'Add' %>
      <% end %>
    </div>
  </div>
</div>
</div>



